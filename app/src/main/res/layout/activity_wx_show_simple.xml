<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jjr.com.playandroids.activitys.wechat.WxShowSimpleActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_wx_simple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/blue_gradient_bg">

        <ImageView
            android:id="@+id/back_wx_simple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_white_24dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_130"
            android:gravity="center"
            android:text="公众号"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_18" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_wx_show_simple"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/blue"
        app:tabMode="scrollable"
        app:tabTextColor="@color/grayblue"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="@color/white" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_show_wx_simple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@color/shadow" />
</FrameLayout>
