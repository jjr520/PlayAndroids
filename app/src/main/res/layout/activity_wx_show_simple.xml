<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jjr.com.playandroids.activitys.wechat.WxShowSimpleActivity">

    <android.support.v7.widget.Toolbar
        android:background="@color/bule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:background="@drawable/ic_arrow_back_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_130"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="公众号"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_wx_show_simple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_show_wx_simple"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="@id/tab_wx_show_simple"></android.support.v4.view.ViewPager>
</android.support.constraint.ConstraintLayout>
