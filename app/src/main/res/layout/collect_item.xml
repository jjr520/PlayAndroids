<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/wx_item_collect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="@dimen/dp_5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/wx_author_icon"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignLeft="@+id/wx_collect"
                android:layout_alignStart="@+id/wx_collect"
                android:layout_alignTop="@+id/wx_item_tv_collect"
                android:src="@mipmap/icon_author" />

            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/wx_author_icon"
                android:id="@+id/wx_item_tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="鸿洋"
                android:textColor="@color/wx_author"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/wx_name_tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_10"
                android:text="公众号/鸿洋"
                android:textColor="@color/blue"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/wx_item_title_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_6"
                android:layout_marginTop="@dimen/dp_50"
                android:gravity="center"
                android:text="推荐一个实用漂亮的弹窗库"
                android:textSize="@dimen/dp_16" />
.
            <ImageView
                android:id="@+id/wx_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wx_item_title_collection"
                android:layout_margin="@dimen/dp_10"
                android:src="@drawable/icon_like" />

            <TextView
                android:id="@+id/wx_item_tv_time_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/wx_item_title_collection"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_toRightOf="@id/wx_collect"
                android:drawableLeft="@drawable/ic_time"
                android:text="一小时之前" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
